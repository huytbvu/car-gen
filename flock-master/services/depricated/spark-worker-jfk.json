{
  "serviceDescription": {
  "container": {
    "image": "docker://docker.cloud:5000/flock_utils/spark_cluster",
    "options": ["-n=false", "--privileged", 
                "--env=DISCOVERY=etcd_host:vm1.jfk.cloud,service:spark_worker", 
                "--lxc-conf=lxc.network.type = veth", 
                "--lxc-conf=lxc.network.link = br0", 
                "--lxc-conf=lxc.network.name = eth0", 
                "--lxc-conf=lxc.network.flags = up",
                "--volume=/mnt/www/spark-apps:/mnt/www/spark-apps"] 
  },
  "id": "spark-worker-jfk",
  "instances": "5",
  "cpus": ".5",
  "mem": "2000",
  "uris": [ ],
  "cmd": "dhclient eth0; ifconfig eth0; configure_spark.sh worker; /usr/sbin/sshd -D; while [ 1 ]; do sleep 5; done" 
  },
  "datacenterConstraint": {"id": "jfk"}
}
