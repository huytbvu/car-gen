{
"serviceDescription": {
  "container": {
    "image": "docker://docker.cloud:5000/flock_utils/collectd",
    "options": ["-n=false", "--privileged",
                "--env=DOCKER_HOST_PORT=4444",
                "--env=DOCKER_HOST_DOMAIN=.lax.cloud",
                "--lxc-conf=lxc.network.type = veth",
                "--lxc-conf=lxc.network.link = br0",
                "--lxc-conf=lxc.network.name = eth0",
                "--lxc-conf=lxc.network.flags = up",
                "--volume=/usr/local/share/collectd:/usr/local/share/collectd",
                "--volume=/etc/hostname:/etc/host-hostname",
                "--volume=/mnt/collectd-rrd:/mnt/collectd-rrd"]
  },
  "id": "collectd-lax",
  "instances": "3",
  "constraints": [["hostname", "UNIQUE"]],
  "cpus": ".5",
  "mem": "4096",
  "uris": [ ],
  "cmd": "dhclient eth0; ifconfig eth0; service ssh start; /usr/local/bin/configure-collectd.sh; service collectd start; while [ 1 ]; do sleep 5; done"
  },
"datacenterConstraint": {"id": "lax"},
"slaDescription": {"policy": "switchproxy"}
}
