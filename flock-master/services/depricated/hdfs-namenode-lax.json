{
"serviceDescription": {
  "container": {
    "image": "docker://docker.cloud:5000/flock_utils/hdfs",
    "options": ["-n=false", "--privileged",
                "--env=DISCOVERY=etcd_host:vm1.lax.cloud,service:hdfs_namenode,hdfs_dir:name,format:false",
                "--lxc-conf=lxc.network.type = veth",
                "--lxc-conf=lxc.network.link = br0",
                "--lxc-conf=lxc.network.name = eth0",
                "--lxc-conf=lxc.network.flags = up",
                "--volume=/mnt/hdfs:/hdfs"]
  },
  "id": "hdfs-namenode-lax",
  "instances": "1",
  "constraints": [["hostname", "UNIQUE"]],
  "cpus": ".2",
  "mem": "512",
  "uris": [ ],
  "cmd": "dhclient eth0; ifconfig eth0; register_service.py; configure_hadoop.sh namenode; /usr/sbin/sshd -D; while [ 1 ]; do sleep 5; done"
  },
"datacenterConstraint": {"id": "lax"},
"slaDescription": {"policy": "switchproxy"}
}

