{
  "container": {
    "image": "docker://docker.cloud:5000/flock_workloads/mongodb",
    "options": ["-n=false", 
                "--privileged",
                "--env=DISCOVERY=etcd_host:vm1.mia.cloud,service_id:mia/mongodb",
                "--lxc-conf=lxc.network.type = veth",
                "--lxc-conf=lxc.network.link = br0",
                "--lxc-conf=lxc.network.name = eth0",
                "--lxc-conf=lxc.network.flags = up"]
  },
  "id": "mia/mongodb",
  "instances": "1",
  "globalConstraint": {"datacenterId": "mia"},
  "localConstraint": [["hostname", "UNIQUE"]],
  "slaDescription": {"policy": "switchproxy"},
  "cpus": "0.2",
  "mem": "1024",
  "cmd": "dhclient eth0; ifconfig eth0; service ssh start; register_service.py; service mongodb start; while [ 1 ]; do sleep 5; done"
}
