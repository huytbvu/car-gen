{
  "container": {
    "image": "docker://docker.cloud:5000/flock_utils/spark_cluster",
    "options": ["-n=false", 
		"--privileged", 
		"--env=DISCOVERY=etcd_host:vm1.jfk.cloud,service_id:jfk/spark-master", 
		"--lxc-conf=lxc.network.type = veth", 
		"--lxc-conf=lxc.network.link = br0", 
		"--lxc-conf=lxc.network.name = eth0", 
		"--lxc-conf=lxc.network.flags = up"]
  },
  "id": "jfk/spark-master",
  "instances": "1",
  "globalConstraint": {"datacenterId": "jfk"},
  "localConstraint": [["hostname", "UNIQUE"]],
  "cpus": ".5",
  "mem": "2000",
  "uris": [ ],
  "cmd": "dhclient eth0; ifconfig eth0; register_service.py; configure_spark.sh master; /usr/sbin/sshd -D; while [ 1 ]; do sleep 5; done" 
}
